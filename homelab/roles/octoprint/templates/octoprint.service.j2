[Unit]
Description=The snappy web interface for your 3D printer
After=network.online.target
Wants=network.online.target

[Service]
Environment=HOST={{ octoprint_listen_host }}
Environment=PORT={{ octoprint_listen_port }}
Type=simple
User={{ octoprint_user }}
ExecStart={{ pip.virtualenv }}/bin/octoprint serve --host=${HOST} --port=${PORT}

[Install]
WantedBy=multi-user.target
